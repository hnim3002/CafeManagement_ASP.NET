@{
}
@model IEnumerable<CafeManagement.Models.Entities.WorkSchedules>

@{
    ViewData["Title"] = "ListWorkSchedules";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">WorkSchedules</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="CreateWorkSchedules" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Create New WorkSchedules
            </a>
        </div>
    </div>
</div>

<table id="tblWorkSchedules" class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Date</td>
            <td>StartTime</td>
            <td>EndTime</td>
            <td>ShiftType</td>
            <td>Note</td>
            <td>Employee ID</td>
            <td>Cafe ID</td>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section Scripts {
    <script src="~/js/WorkSchedules.js"></script>
}
