@model IEnumerable<CafeManagement.Models.Entities.Customer>

@{
    ViewData["Title"] = "ListCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="CreateCustomer" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Create New Customer
            </a>
        </div>
    </div>
</div>

<table id="tblCustomer" class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>PhoneNumber</td>
            <td>Email</td>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section Scripts {
    <script src="~/js/admin/Customer.js"></script>
}
